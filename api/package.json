{
  "name": "api",
  "version": "1.0.0",
  "description": "An api using Express with TypeScript",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn --transpile-only --watch src/* src/main.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^20.4.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "eslint": "^8.47.0",
    "prettier": "^3.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "esbuild": "^0.19.2",
    "eslint-config-prettier": "^9.0.0",
    "ts-node": "10.9.1"
  }
}
